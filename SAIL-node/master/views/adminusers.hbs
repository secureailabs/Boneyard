<!DOCTYPE html>
<html>
  <head>
    <title>Admin - Users</title>
    {{> old-head}}
  </head>
  <body>
    <div class="container">
      {{> adminnav}}
      <div class="page-header text-center">
        <h1>Users</h1>
        {{#if message}}
          <div class="alert alert-{{ color }}">{{ message }}</div>
        {{/if}}
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <th>User ID</th>
          <th>Email</th>
          <th>Admin</th>
          <th>Delete User?</th>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td>{{ this.id }}</td>
            <td>{{ this.email }}</td>
            <td>{{#if this.admin}}<span class="glyphicon glyphicon-ok"></span>{{else}}<span class="glyphicon glyphicon-remove"></span>{{/if}}</td>
            <td><a href="/delete/user/{{ this.id }}"><span class="glyphicon glyphicon-trash"></span></a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </body>
</html>