#---- Installing Go ----
gvm install go1.4 -B
gvm use go1.4
export GOROOT_BOOTSTRAP=$GOROOT
gvm install go1.10.3
gvm use go1.10.3

#---- Installing Geth, Puppeth, bootnode ----
git clone https://github.com/ethereum/go-ethereum.git
cd go-ethereum
make all
cd build/bin

#----Commands ----
./go-ethereum/build/bin/bootnode -genkey ./boot.key
./go-ethereum/build/bin/bootnode -nodekey ./boot.key 
./go-ethereum/build/bin/puppeth --network private
./go-ethereum/build/bin/geth --datadir ./pnode1 init ./private.json
./go-ethereum/build/bin/geth \
  --datadir ~/pnode1 \
  --rpc \
  --bootnodes "enode://06ca99f1f1276ccff23edf07347de1c08fbd8974ad462850fc14d398591509e84168ee3d588e6c6ea2c834f639b2283faf24767fd325028e45fe52a17c02f3cf@127.0.0.1:30301"
  --mine \
  --etherbase 0xdef060a84b2ac47d47a1fa78fbb06fb26f545c22
  --unlock 0xdef060a84b2ac47d47a1fa78fbb06fb26f545c22


# --- No necessary: Just to have a visual representation
git clone https://github.com/cubedro/eth-net-intelligence-api ~/eth-netstats
cd ~/eth-netstats
npm install
npm start

git clone https://github.com/cubedro/eth-net-intelligence-api ~/eth-net-intelligence-api
cd ~/eth-net-intelligence-api
